<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  // Inisialisasi AOS
  AOS.init({
    duration: 800,
    once: true,
  });

  // Logika untuk menghilangkan preloader 
  window.addEventListener("load", () => {
    const preloader = document.getElementById("preloader");
    if (preloader) {
      setTimeout(() => {
        preloader.classList.add("hidden"); // Tambahkan kelas .hidden untuk memicu transisi CSS
      }, 500); // Delay awal sebelum memulai transisi fade-out (bisa disesuaikan)
    }
  });
</script>
